{
  "files": [],
  "references": [{ "path": "./tsconfig.app.json" }, { "path": "./tsconfig.node.json" }],
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "baseUrl": "./src",
    "paths": {
      "@*": ["*"],
      "@components/*": ["components/*"],
      "@utils/*": ["utils/*"],
      "@services/*": ["services/*"],
      "@hooks/*": ["hooks/*"],
      "@types/*": ["types/*"],
      "@constants/*": ["constants/*"],
      "@styles/*": ["styles/*"],
      "@assets/*": ["assets/*"],
      "@config/*": ["config/*"],
      "@store/*": ["store/*"],
      "@routes/*": ["routes/*"],
      "@layouts/*": ["components/layouts/*"],
      "@pages/*": ["pages/*"]
    },
    "module": "esnext" // 모듈 타입을 설정
  }
}
